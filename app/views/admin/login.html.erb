
<%= form_tag do %>
    <fieldset>
      <legend>Please Login In</legend>

      <div class="field">
        <label>Name:</label>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="field">
        <label>Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="actions">
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
<% end %>

